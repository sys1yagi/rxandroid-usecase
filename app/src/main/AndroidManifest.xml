<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sys1yagi.rxandroid">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="android.support.multidex.MultiDexApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.sys1yagi.rxandroid.activities.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.sys1yagi.rxandroid.RssParseActivity"
                android:label="@string/title_activity_simple_network_access"/>
        <activity
                android:name="com.sys1yagi.rxandroid.activities.FormValidationActivity"
                android:label="@string/title_activity_form_validation">
        </activity>
        <activity
                android:name="com.sys1yagi.rxandroid.activities.FormValidation2Activity"
                android:label="@string/title_activity_form_validation2">
        </activity>
        <activity
                android:name=".activities.SimpleNetworkAccessActivity"
                android:label="@string/title_activity_simple_network_access">
        </activity>
    </application>

</manifest>
